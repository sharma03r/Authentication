<script src="https://www.google.com/recaptcha/api.js"></script>
<div class="mt-5">
  <div class="col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-sign-in-alt"></i> Sign In
      </h1>
      <%- include('_messages.ejs') %>
      <form action="/users/create-session" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            required
          />
        </div>
        <div class="form-group">
          <div
            class="g-recaptcha"
            data-sitekey="6LcWcusUAAAAAEq-7SXw3W7qotz2asAHpiWFyU2S"
          ></div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
      </form>
      <p class="lead mt-4">No Account? <a href="/users/sign-up">Sign Up</a></p>
      <p class="lead mt-0">
        Forgot Password? <a href="/users/forgot-password">Click Here</a>
      </p>
    </div>
  </div>
</div>
